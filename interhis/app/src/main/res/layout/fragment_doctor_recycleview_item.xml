<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_doctor_recycleview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_doctor_recycleView_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/touxiang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_doctor_recycleView_item_name"
                style="@style/bigSize"
                android:text="李四"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/fragment_doctor_recycleView_item_sex"
                style="@style/smallSize"
                android:layout_marginLeft="5dp"
                android:text="男"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/fragment_doctor_recycleView_item_age"
                style="@style/smallSize"
                android:layout_marginLeft="5dp"
                android:text="54"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_doctor_recycleView_item_content"
            style="@style/smallSize"
            andr
            android:layout_marginTop="2dp"
            android:text="咳嗽头痛"/>

    </LinearLayout>

</LinearLayout>