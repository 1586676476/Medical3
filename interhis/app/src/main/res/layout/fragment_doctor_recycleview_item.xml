<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_doctor_recycleview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_doctor_recycleView_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/touxiang"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_doctor_recycleView_item_name"
                    style="@style/bigSize"
                    android:textColor="@color/colorBlack"
                    tools:text="李四"/>

                <TextView
                    android:id="@+id/fragment_doctor_recycleView_item_sex"
                    style="@style/smallSize"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorBlack"
                    tools:text="男"/>

                <TextView
                    android:id="@+id/fragment_doctor_recycleView_item_age"
                    style="@style/smallSize"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorBlack"
                    tools:text="54"/>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_doctor_recycleView_item_content"
                style="@style/smallSize"
                android:layout_marginTop="2dp"
                tools:text="咳嗽头痛"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>